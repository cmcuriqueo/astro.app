---
import ProductItem from "./ProductItem.astro"
import { products } from "../data/products"
---


    <ul class="grid grid-cols-2 md:grid-cols-3 gap-3">
        { 
            
                products.map((item) => {
                    return (
                        <li>
                            <ProductItem id={item.id} title={item.title} images={item.images}/>
                        </li>
                    )
                })
            
        }
    </ul>